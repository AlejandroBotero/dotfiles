# ----------------------------
# Font
# ----------------------------
font_family      JetBrains Mono
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        12.5

# Enable ligatures (JetBrains Mono supports them)
disable_ligatures never

# ----------------------------
# Window Appearance
# ----------------------------
background_opacity 0.90
dynamic_background_opacity yes

# Window padding (makes it look clean)
window_padding_width 12

# Rounded corners (Wayland/KDE works best)
window_border_width 0
hide_window_decorations yes

# ----------------------------
# Cursor
# ----------------------------
cursor_shape beam
cursor_blink_interval 0.6

# ----------------------------
# Scrollback
# ----------------------------
scrollback_lines 10000
wheel_scroll_multiplier 5.0

# ----------------------------
# Colors (Modern Dark Theme)
# ----------------------------
background #1e1e2e
foreground #cdd6f4
selection_background #45475a
selection_foreground #ffffff

# Black
color0  #45475a
color8  #585b70

# Red
color1  #f38ba8
color9  #f38ba8

# Green
color2  #a6e3a1
color10 #a6e3a1

# Yellow
color3  #f9e2af
color11 #f9e2af

# Blue
color4  #89b4fa
color12 #89b4fa

# Magenta
color5  #f5c2e7
color13 #f5c2e7

# Cyan
color6  #94e2d5
color14 #94e2d5

# White
color7  #bac2de
color15 #a6adc8

# ----------------------------
# Shell
# ----------------------------
shell /bin/zsh

# ----------------------------
# Keybindings
# ----------------------------
map ctrl+shift+enter new_window
map ctrl+shift+t new_tab
map ctrl+shift+w close_window
map ctrl+shift+q close_tab

# Transparency toggle
map ctrl+shift+o set_background_opacity 0.75
map ctrl+shift+p set_background_opacity 1.0

# Clear terminal
map ctrl+shift+k clear_terminal scrollback active
